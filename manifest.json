{
    "manifest_version": 2,
    "name": "Sigarra To Calendar",
    "short_name": "SigToCa",
    "version": "1.8.1",
    "description": "Sigarra To Calendar - Automatically add Sigarra Timetables to your Calendar Apps",
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "browser_action": {
        "default_title": "SigToCa",
        "default_icon": "icons/icon-48.png"
    },
    "content_scripts": [{
        "matches": ["https://*.up.pt/*"],
        "css": ["css/content_style.css"],
        "js": ["js/lib/jquery.min.js", "js/lib/ics.deps.min.js", "js/lib/ics.min.js",
            "js/utils/calendar.js", "js/utils/global.js", "js/utils/modal.js", "js/utils/time.js", "js/utils/settings.js", "js/extractors/extractor.js"
        ],
        "run_at": "document_end"
    }, {
        "matches": ["https://*.up.pt/*hor_geral*", "https://*.up.pt/*HOR_GERAL*"],
        "js": ["js/extractors/timetable.js"],
        "run_at": "document_end"
    }, {
        "matches": ["https://*.up.pt/*exa_geral*", "https://*.up.pt/*EXA_GERAL*"],
        "js": ["js/extractors/exams.js"],
        "run_at": "document_end"
    }, {
        "matches": ["https://moodle.up.pt/*"],
        "js": ["js/extractors/moodle.js"],
        "run_at": "document_end"
    }, {
        "matches": ["https://*.up.pt/*show_pauta_resul*", "https://*.up.pt/*SHOW_PAUTA_RESUL*"],
        "js": ["js/lib/chart.min.js", "js/lib/math.min.js", "js/lib/mustache.min.js", "js/extractors/grades.js"],
        "run_at": "document_end"
    }],
    "permissions": [
        "https://*.up.pt/*",
        "storage"
    ],
    "web_accessible_resources": ["icons/*"],
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "homepage_url": "https://github.com/msramalho/SigToCa",
    "options_page": "options.html"
}